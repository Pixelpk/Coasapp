<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".call.IncomingCallRingActivity">

    <TextView
        android:id="@+id/textViewCallerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="32dp"
        android:text="Incoming Call"
        android:textColor="@color/black_or_white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewReject"
            android:layout_width="wrap_content"
            android:layout_margin="32dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/btn_call_end" />

        <ImageView
            android:id="@+id/imageViewAccept"
            android:layout_width="wrap_content"
            android:layout_margin="32dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/btn_call_voice_accept" />

    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ChatMessageItemStyle"
    android:layout_width="match_parent"
    android:layout_marginRight="64dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bubble_frame"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_avatar_placeholder" />

    <LinearLayout
        android:id="@+id/bubble_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:background="@drawable/text_message_bubble"
        android:backgroundTint="@color/pink_light"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="@dimen/margin_tiny"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_image_view"
        app:layout_constraintTop_toTopOf="parent">
        <include
            android:id="@+id/layoutReply"
            android:visibility="gone"
            tools:visibility="visible"
            layout="@layout/chat_reply_original_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Ron Weasley"
            tools:visibility="visible" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/attachment_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_tiny"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_avatar_placeholder" />

            <ImageView
                android:id="@+id/imageViewPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_media_play"
                tools:ignore="ContentDescription" />
        </FrameLayout>
        <TextView
            android:id="@+id/textViewDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingLeft="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:textSize="@dimen/message_date_size"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry"
            tools:text="20:05" />

    </LinearLayout>

</LinearLayout>
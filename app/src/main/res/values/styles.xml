<?xml version="1.0" encoding="utf-8"?><!--
Theme.Light :for android 3.0
Theme.Holo.Light:For ApI 11-13
Theme.Holo.Light.DarkActionBar
-->

<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
    </style>

<style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
    <item name="boxBackgroundMode">none</item>
</style>

    <style name="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/oswald_light</item>
    </style>
    <style name="ApplozicTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ApplozicTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
    <style name="DefaultButtonStyle2" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="DefaultButtonStyle1" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="AppTheme.DarkTitle">
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>

    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Custom color theme for Matisse image picker -->
    <style name="Matisse.ConnectyCube" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomToolbar.apply.textColor">@color/colorPrimary</item>
        <item name="item.checkCircle.backgroundColor">@color/colorPrimary</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorPrimary</item>
    </style>

    <style name="CallTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/callBackground</item>
    </style>

    <style name="MyToolbar" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RootLayoutStyle">
        <item name="android:background">@color/white_or_black_screen</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Hyperlink">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/hyper</item>
    </style>
</resources>